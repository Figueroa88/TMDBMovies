<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.alejandro.tmdbmovies.presentation.movieList.MovieListFragment"
        android:label="f_movie_list"
        tools:layout="@layout/f_movie_list">
        <action
            android:id="@+id/action_movieList_to_movieDetail"
            app:destination="@id/movieDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.alejandro.tmdbmovies.presentation.movieDetail.MovieDetailFragment"
        android:label="MovieDetailFragment" />
</navigation>